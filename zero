#include <stdio.h>

int main()
{   float n;
    printf("Insira um número: ");
    scanf("%f", &n);
    
        if (n>0)
            printf("Este número é positivo");
        
        else
        if (n<0)
                printf("Este número é negativo");
                
            else printf("Este número é nulo");
            
            
    
    

